<?xml version="1.0"?>
<config>
    <sections>
        <dev translate="label" module="cyberhouse_allowtemplatesymlinkssystemsetting">
            <groups>
                <template translate="label">
                    <label>Template Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow_symlink translate="label comment">
                            <label>Allow Symlinks</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[<b>Warning!</b><br />
                                This setting was removed with Magento 1.9.3.3 and SUPEE-9767 <a href="https://magento.com/security/patches/supee-9767">https://magento.com/security/patches/supee-9767</a><br/>
                                It is re-enabled here to allow usage of modman for template symlinks.]]>
                            </comment>
                        </allow_symlink>
                    </fields>
                </template>
            </groups>
        </dev>
    </sections>
</config>
